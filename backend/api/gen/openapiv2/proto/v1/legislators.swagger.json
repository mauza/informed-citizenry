{
  "swagger": "2.0",
  "info": {
    "title": "Legislators API",
    "description": "API for querying Utah state legislators",
    "version": "1.0"
  },
  "tags": [
    {
      "name": "LegislatorService"
    }
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/v1/legislators": {
      "get": {
        "operationId": "LegislatorService_ListLegislators",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1ListLegislatorsResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "chamber",
            "description": "Optional: \"house\" or \"senate\". Returns all if omitted.",
            "in": "query",
            "required": false,
            "type": "string"
          }
        ],
        "tags": [
          "LegislatorService"
        ]
      }
    },
    "/v1/legislators/{id}": {
      "get": {
        "operationId": "LegislatorService_GetLegislator",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1GetLegislatorResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "LegislatorService"
        ]
      }
    }
  },
  "definitions": {
    "protobufAny": {
      "type": "object",
